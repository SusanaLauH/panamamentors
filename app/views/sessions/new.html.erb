<div id="page">
  <div id="page-bgtop">
    <div id="page-bgbtm">


      <% provide(:title, 'Login') %>
      <h1>Login</h1>

      <div class="row">
        <div class="span6 offset3">
          <%= form_for(:session, url: sessions_path) do |f| %>


              <div class="field">
                <%= f.label :email %><br />
                <%= f.text_field :email %>
              </div>
              <div class="field">
                <%= f.label :password %><br />
                <%= f.password_field :password %>

              </div>
         <%= f.submit "Log in", class: "btn btn-large btn-primary" %>
          <% end %>
        </div>
      </div>

    </div>
    </div>
</div>
